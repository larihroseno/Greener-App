<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greenerplain"
    tools:context=".GreenTech">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"

            android:fontFamily="@font/capriola"
            android:text="Welcome,"
            android:textColor="#0E5718"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/welcomeMsg"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"

            android:layout_marginRight="100dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/capriola"
            android:textColor="#0E5718"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"

            android:layout_marginRight="10dp"
            android:fontFamily="@font/capriola"
            android:text="Challenge yourself"
            android:textColor="#0E5718"
            android:textSize="30sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatImageButton


            android:id="@+id/btnWaste"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="100dp"
            android:adjustViewBounds="true"
            android:background="#4CAF50"
            android:scaleType="fitCenter"
            android:src="@drawable/waste" />

        <androidx.appcompat.widget.AppCompatImageButton

            android:id="@+id/btnWater"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"
            android:adjustViewBounds="true"
            android:background="#4CAF50"
            android:scaleType="fitCenter"
            android:src="@drawable/water" />

        <androidx.appcompat.widget.AppCompatImageButton

            android:id="@+id/btnDiet"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"
            android:adjustViewBounds="true"
            android:background="#4CAF50"
            android:scaleType="fitCenter"

            android:src="@drawable/diet" />

        <androidx.appcompat.widget.AppCompatImageButton

            android:id="@+id/btnEnergy"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"
            android:adjustViewBounds="true"
            android:background="#4CAF50"
            android:scaleType="fitCenter"

            android:src="@drawable/lights" />




    </LinearLayout>




</ScrollView>